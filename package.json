{
	"name": "use-nodecg",
	"version": "0.0.0",
	"description": "Custom React Hooks for NodeCG",
	"repository": "https://github.com/hoishin/use-nodecg",
	"license": "MIT",
	"author": "Keiichiro Amemiya <hoishinxii@gmail.com>",
	"files": [
		"out"
	],
	"main": "out/index.js",
	"scripts": {
		"prebuild": "del out",
		"build": "tsc",
		"prepublishOnly": "yarn build",
		"preversion": "generate-changelog && git add CHANGELOG.md && git commit -m 'update CHANGELOG'"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"devDependencies": {
		"@hoishin/tslint-config": "^2.0.2",
		"@types/react": "^16.7.7",
		"del-cli": "^1.1.0",
		"generate-changelog": "^1.7.1",
		"husky": "^1.2.0",
		"lint-staged": "^8.1.0",
		"nodecg": "^1.3.0",
		"prettier": "^1.15.2",
		"react": "^16.7.0-alpha.2",
		"sort-package-json": "^1.16.0",
		"tslint": "^5.11.0",
		"typescript": "^3.1.6"
	},
	"peerDependencies": {
		"react": "^16.7.0"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"tslint -p . -t stylish --fix",
			"git add"
		],
		"*.{ts,tsx,js,md,yml}": [
			"prettier --write",
			"git add"
		],
		"package.json": [
			"sort-package-json",
			"git add"
		]
	}
}
