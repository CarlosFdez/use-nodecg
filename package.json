{
	"name": "use-nodecg",
	"version": "0.3.1-alpha.1",
	"description": "Custom React Hooks for NodeCG",
	"keywords": [
		"custom-hooks",
		"nodecg",
		"react",
		"react-hooks",
		"typescript"
	],
	"repository": "https://github.com/hoishin/use-nodecg",
	"license": "MIT",
	"author": "Keiichiro Amemiya <hoishinxii@gmail.com>",
	"files": [
		"out",
		"src",
		"!src/__tests__"
	],
	"main": "out/index.js",
	"types": "out/index.d.ts",
	"scripts": {
		"alpha": "npm version prerelease --preid=alpha",
		"beta": "npm version prerelease --preid=beta",
		"prebuild": "del out",
		"build": "tsc",
		"prepublishOnly": "yarn && yarn build",
		"pretest": "yarn build",
		"test": "jest",
		"version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"devDependencies": {
		"@hoishin/tslint-config": "^2.0.2",
		"@types/jest": "^23.3.9",
		"@types/node": "^10.12.10",
		"@types/react": "^16.7.7",
		"@types/react-dom": "^16.0.10",
		"conventional-changelog-cli": "^2.0.11",
		"del-cli": "^1.1.0",
		"husky": "^1.2.0",
		"jest": "^23.6.0",
		"lint-staged": "^8.1.0",
		"nodecg": "^1.3.0",
		"prettier": "^1.15.2",
		"react": "^16.7.0-alpha.2",
		"react-dom": "^16.7.0-alpha.2",
		"react-testing-library": "^5.3.0",
		"sort-package-json": "^1.16.0",
		"ts-jest": "^23.10.5",
		"tslint": "^5.11.0",
		"typescript": "^3.1.6"
	},
	"peerDependencies": {
		"react": "^16.7.0"
	},
	"engines": {
		"node": "^8.9.0 || ^10.13.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"tslint -p tsconfig.lint.json -t stylish --fix",
			"git add"
		],
		"*.{ts,tsx,js,md,yml}": [
			"prettier --write",
			"git add"
		],
		"package.json": [
			"sort-package-json",
			"git add"
		]
	}
}
